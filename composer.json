{
    "name": "pnx/laravel-ignite",
    "description": "Laravel package for enhanced form ui",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Henrik Hautakoski",
            "email": "henrik.hautakoski@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "illuminate/support": "^9.0",
        "illuminate/view": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "orchestra/testbench": "^7.0",
        "laravel/framework": "^9.0"
    },
	"suggest": {
        "blade-ui-kit/blade-icons": "For adding icons to form elements."
    },
    "autoload": {
        "psr-4": {
            "Ignite\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Ignite\\ServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
